<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThreeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/oid_photo"
            android:src="@drawable/oid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:layout_below="@id/oid_photo"
            android:layout_centerHorizontal="true"
            android:text="Waranya Butwichai"
            android:layout_marginTop="20dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/btnClickFragThree"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_centerHorizontal="true"
            android:text="GO BACK MY FRAGMENT"
            android:textSize="18sp"/>

    </RelativeLayout>

</LinearLayout>